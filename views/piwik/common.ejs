<!-- Piwik -->
<script type="text/javascript">
    var uid = window._user ? window._user.id : null;  //当前访客id(如果有的话)
    var pid = window._product ? window._product.id : null; //当前作品id
    var puid = window._product ? window._product.uid : null;  //当前作品所属用户id(作者)
    var u = "//localpiwik.com/";   //注: 需配置
    var siteId = 1;  //注：需配置

    var _paq = _paq || [];
    if (uid) {
        _paq.push(['setCustomVariable', 1, 'uid', uid, 'page']);
        _paq.push(['setCustomVariable', 1, 'uid', uid, 'visit']);
    }
    if (pid) {
        _paq.push(['setCustomVariable', 2, 'pid', pid, 'page']);
        _paq.push(['setCustomVariable', 2, 'pid', pid, 'visit']);
    }
    if (puid) {
        _paq.push(['setCustomVariable', 3, 'puid', puid, 'page']);
        _paq.push(['setCustomVariable', 3, 'puid', puid, 'visit']);
    }
    _paq.push(['setDocumentTitle', document.domain + '/' + document.title]);
    //_paq.push(['setCookieDomain', '*.me.cn']);
    //_paq.push(['setDomains', ['127.0.0.1', 'localhost']]); //增加主机域名，这些域名不记录为"出站链接"
    _paq.push(['trackPageView']);
    _paq.push(['enableLinkTracking']);
    (function() {
        //var u = "//localpiwik.com/";   //注: 需配置
        //var siteId = 1;  //注：需配置
        var trackerUrl = u + 'piwik.php';
        _paq.push(['setTrackerUrl', trackerUrl]);
        _paq.push(['setSiteId', siteId]);

        var d = document,
            g = d.createElement('script'),
            s = d.getElementsByTagName('script')[0];
        g.type = 'text/javascript';
        g.async = false;  //async：异步(多线程);
        g.defer = true;
        g.onload = onPiwikReady;
        g.src = u + 'piwik.js';
        s.parentNode.insertBefore(g, s);

        function onPiwikReady() {
            window.piwikTracker = window.Piwik.getTracker(trackerUrl, siteId);
        }
    })();
</script>
<!-- End Piwik Code -->